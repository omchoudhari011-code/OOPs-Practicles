#include<iostream>
using namespace std;
class num {
double a,b;
public:
void getd();
void calculate();
};
void num::getd()
{
cout<<"Enter first number:";
cin>>a;
cout<<"Enter second number:";
cin>>b;
}
void num::calculate()
{
try
{
if (b==0)
throw b;
else
cout<<"a/b is:"<<a/b<<endl;
}
catch(double b)
{
cout<<"catched divided by zero"<<endl;
}
}
int main()
{
num n;
n.getd();
n.calculate();
return 0;
}
